<div class="row">
<div class="col-md-offset-2 col-md-8">
<div class="panel panel-default">
  <div class="panel-heading center">
    <%= image_tag @pin.image.url(:medium) %></div>
<div class="panel-body">
  <strong><font size='7'><%= @pin.title %></font></strong><br/>
  <div><%= @pin.description %></div>
  <br/></br>
  Dodane przez: <strong><%= @pin.user.name %></strong><br/>
    <span class="likes-count">Weźmie udział: <%=@pin.get_upvotes.size%> </span><br/></br>
  <%if user_signed_in?%>
  <%= link_to like_pin_path(@pin), class:"like-btn", method: :put, remote: true do %>
  <%if !current_user.liked? @pin%>
    <span><p>Będę tam! :)</p></span>
    <%else%>
    <span><p>Nie mogę przyjść :(</p></span>
  <%end%>
  <%end%>
  <%else%>
  Chcesz wziąć udział?
  <%= link_to 'Zaloguj się!', new_user_session_path %></br></br>
  <%end%>
  <% if @pin.user == current_user %>
<%= link_to 'Edytuj', edit_pin_path(@pin) %><br/>
<%= link_to 'Usuń', @pin, method: :delete, data: { confirm: 'Czy na pewno chcesz usunąć to wydarzenie?' } %><br/>
<%end%>
<%= link_to 'Wstecz', pins_path %>
</div>
</div>
</div>
</div>
