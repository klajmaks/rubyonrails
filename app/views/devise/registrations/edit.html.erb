<div class="panel panel-default">
<div class="panel-heading"><h2>Edytuj użytkownika</h2></div>
<!-- <%= resource_name.to_s.humanize %> -->
<div class-"panel-body">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

    <div class="form_group">
      <%= f.label :name, "Nazwa" %><br />
      <%= f.text_field :name, autofocus: true, class: "form_control" %>
    </div>

  <div class="from_group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form_control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Oczekuje na potwierdzenie dla: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="from_group">
    <%= f.label :password, "Hasło" %> <i>(pozostaw puste, jeśli nie chcesz zmieniać)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: "form_control" %>
    <% if @minimum_password_length %>
      <br />
      <em>Minimum <%= @minimum_password_length %> znaków</em>
    <% end %>
  </div>

  <div class="from_group">
    <%= f.label :password_confirmation, "Potwierdź hasło" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form_control" %>
  </div>

  <div class="from_group">
    <%= f.label :current_password, "Obecne hasło" %> <i>(potrzebujemy Twojego obecnego hasła, aby potwierdzić zmianę)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "form_control" %>
  </div>

  <div class="actions">
    <%= f.submit "Aktualizuj", class: "btn btn-primary" %>
  </div>
<% end %>

<h3>Usuń konto</h3>

<p>Niezadowolony? <%= button_to "Usuń konto", registration_path(resource_name), data: { confirm: "Jesteś pewny?" }, method: :delete %></p>

<%= link_to "Wstecz", :back %>
</div>
</div>
